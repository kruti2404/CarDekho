@model Task1.Models.VehicleForm

@{
	ViewData["Title"] = "Edit";
}

@section Styles {
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/Task1.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/select2.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

	<style>
		form {
			background-color: #f8f9fa;
			padding: 20px;
			border-radius: 10px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		}

		h1, h4 {
			color: #343a40;
		}

		select[multiple] {
			height: auto;
		}

		.select2-container {
			width: 100% !important;
		}
	</style>
}

@section Scripts {
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
	<script src="~/js/Edit.js"></script>
	<script src="~/js/select2.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}

<div class="container mt-4">
	<h1>Edit Vehicle</h1>
	<hr />
	<div class="row">
		<div class="col-md-6">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="VehicleId" />

				<div class="mb-3">
					<label asp-for="Name" class="form-label fw-semibold"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Description" class="form-label fw-semibold"></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="ModelYear" class="form-label fw-semibold"></label>
					<input asp-for="ModelYear" class="form-control" />
					<span asp-validation-for="ModelYear" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Price" class="form-label fw-semibold"></label>
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Rating" class="form-label fw-semibold"></label>
					<input asp-for="Rating" class="form-control" />
					<span asp-validation-for="Rating" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="CategoriesList" class="form-label fw-semibold">Categories</label>
					<input type="hidden" asp-for="CategoriesList" value="@Model.CategoriesList" />
					@Html.DropDownList("CategoryName", new SelectList(Model.CategoriesList), Model.CategoryName, new { @class = "form-select" })
				</div>

				<div class="mb-3">
					<label asp-for="BrandList" class="form-label fw-semibold">Brands</label>
					<input type="hidden" asp-for="BrandList" value="@Model.BrandList" />
					@Html.DropDownList("BrandName", new SelectList(Model.BrandList), Model.BrandName, new { @class = "form-select" })
				</div>

				<div class="mb-3">
					<label asp-for="Quantity" class="form-label fw-semibold"></label>
					<input type="number" asp-for="Quantity" class="form-control" />
				</div>

				<div class="mb-3">
					<label class="form-label fw-semibold">Colours</label>
					<input type="hidden" asp-for="ColoursList" value="@Model.ColoursList" />
					<select id="SelectedColours" multiple class="form-select">
						@foreach (var item in Model.ColoursList as IEnumerable<string>)
						{
							<option value="@item">@item</option>
						}
					</select>
					<input type="hidden" name="SelectedColours" id="SelectedColoursHidden" value="@Model.SelectedColours" />
				</div>

				<div class="mb-3">
					<input type="submit" value="Save" class="btn btn-primary" />
					<a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
				</div>
			</form>
		</div>
	</div>
</div>
